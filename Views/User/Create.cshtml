@model MVC_users.Models.Roles

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Usuarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
  <form asp-action="Save" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
             USUARIO:<input type="text" name="userid" id="userid" class="form-control"/>
            </div>
            <div class="form-group">
            NOMBRE:<input type="text" name="nombreuser" id="nombreuser" class="form-control" />
            </div>
              <div class="form-group">
            PASS:<input type="text" name="passuser" id="passuser" class="form-control" />
            </div>
           
            
               <div class="form-group" >

                   
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>  
                <div  style="width:350px;">  
                    <label   class="control-label">Roles</label>  
                    <select  id="idr" name="idr"
                      class="form-control"   
                      asp-items="@(new SelectList(@ViewBag.ListofRoles,"idroles", "nombrerol"))">  
                    </select>  
                </div>  
            
        </div>  
        <div class="form-group">  
            <div class="row">  
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">  
                    @if (ViewBag.SelectedValue != null)  
                    {  
                        <text>Rol Seleccionado Nombrerol: </text> @ViewBag.SelectedValue;  
                    }  
                </div>  
            </div>  
        </div>  
        <div class="form-group">
              <button type="submit" >Guardar</button>
            </div>
 
        </form>
    
              </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
